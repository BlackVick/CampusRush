<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/materialLayout"
        android:layout_margin="5dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/courseNameTxt"
                android:text="Material Name"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/materialNameTxt"
                android:text="Material Name"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/materialInfoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Information"
                android:maxLines="2"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/downloadMaterial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file_download"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@id/materialLayout"/>

</RelativeLayout>