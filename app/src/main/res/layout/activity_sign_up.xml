<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:animateLayoutChanges="true"
    android:id="@+id/signUpRootLayout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_back_top"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's Get You Registered !"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/welcomeText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/welcomeText"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="6dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_back_bottom"
            android:animateLayoutChanges="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="60dp"
            android:padding="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_back_bottom"
                android:layout_above="@id/signUserUp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:descendantFocusability="beforeDescendants"
                    android:layout_margin="7dp">

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpUserName"
                        android:hint="Username"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textPersonName"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_register_user"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpFirstName"
                        android:hint="First Name"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textCapSentences"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_register_user"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpLastName"
                        android:hint="Last Name"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textCapSentences"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_register_user"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpEmail"
                        android:hint="E - Mail"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_mail_login"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="match_parent"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="15sp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_ring"/>

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpPassword"
                        android:hint="Password"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_register_password"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="@drawable/edittext_ring"
                        android:id="@+id/signUpConfirmPassword"
                        android:hint="Confirm Password"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:drawableStart="@drawable/ic_register_password"
                        android:drawablePadding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/policyLayout"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">

                        <com.rey.material.widget.CheckBox
                            android:id="@+id/privacyPolicyCheck"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            style="@style/Material.Drawable.CheckBox"
                            android:gravity="center_vertical|center_horizontal"
                            app:cbd_strokeColor="@color/colorPrimaryDark"
                            app:cbd_tickColor="@color/white"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="8.5"
                            android:layout_height="wrap_content"
                            android:id="@+id/policyTextView"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:gravity="start"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_login_button"
                android:layout_alignParentBottom="true"
                android:id="@+id/signUserUp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:text="SIGN UP"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>