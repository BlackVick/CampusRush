<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navLayout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:animateLayoutChanges="true"
    android:background="@drawable/bottom_nav_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/new_offwhite_feed_icon"
            android:adjustViewBounds="true"
            android:padding="14dp"
            android:id="@+id/feed"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/new_offwhite_material_icon"
            android:adjustViewBounds="true"
            android:padding="14dp"
            android:id="@+id/materials"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/new_offwhite_messaging_icon"
            android:adjustViewBounds="true"
            android:padding="14dp"
            android:id="@+id/messagesNav"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/new_offwhite_notification_icon"
                android:adjustViewBounds="true"
                android:padding="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/notificationCount"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/new_offwhite_account_icon"
            android:adjustViewBounds="true"
            android:padding="14dp"
            android:id="@+id/account"/>

    </LinearLayout>

</RelativeLayout>